<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="${relativePackage}.${activityClass}">

    <include
            android:id="@+id/main_act_app_bar"
            layout="@layout/app_bar"
            />

    <LinearLayout
            android:id="@+id/main_act_elements_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_act_app_bar"
            android:layout_marginTop="@dimen/main_act_tiles_margin"
            android:layout_marginLeft="@dimen/main_act_tiles_margin"
            android:layout_marginBottom="@dimen/main_act_tiles_margin"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:id="@+id/main_act_gramm_tile"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/main_act_tiles_margin"
                android:clickable="true"
                card_view:cardCornerRadius="@dimen/tile_corner_radius"
                card_view:cardElevation="@dimen/tile_elevation">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/main_act_gramm_tile_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="grammTitleImage"
                        android:layout_weight="2"
                        android:src="@drawable/img_gramm"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                    <TextView
                            android:id="@+id/main_act_gramm_tile_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingTop="24dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="24dp"
                            android:textColor="@color/tile_title"
                            android:text="@string/title_activity_grammar"/>

                    <TextView
                            android:id="@+id/main_act_gramm_tile_subtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="24dp"
                            android:textSize="14dp"
                            android:textColor="@color/tile_subtext"
                            android:text="@string/main_act_gramm_tile_subtext"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/main_act_vocab_tile"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/main_act_tiles_margin"
                android:clickable="true"
                card_view:cardCornerRadius="@dimen/tile_corner_radius"
                card_view:cardElevation="@dimen/tile_elevation">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/main_act_vocab_tile_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="vocabTitleImage"
                        android:layout_weight="2"
                        android:src="@drawable/img_vocab"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                    <TextView
                            android:id="@+id/main_act_vocab_tile_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingTop="24dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="24dp"
                            android:textColor="@color/tile_title"
                            android:text="@string/title_activity_vocabulary"/>

                    <TextView
                            android:id="@+id/main_act_vocab_tile_subtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="24dp"
                            android:textSize="14dp"
                            android:textColor="@color/tile_subtext"
                            android:text="@string/main_act_vocab_tile_subtext"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/main_act_dict_tile"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/main_act_tiles_margin"
                android:clickable="true"
                card_view:cardCornerRadius="@dimen/tile_corner_radius"
                card_view:cardElevation="@dimen/tile_elevation">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/main_act_dict_tile_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="dictTitleImage"
                        android:layout_weight="2"
                        android:src="@drawable/img_dict"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                    <TextView
                            android:id="@+id/main_act_dict_tile_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingTop="24dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp"
                            android:textSize="24dp"
                            android:textColor="@color/tile_title"
                            android:text="@string/title_activity_dictionary"/>

                    <TextView
                            android:id="@+id/main_act_dict_tile_subtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="24dp"
                            android:textSize="14dp"
                            android:textColor="@color/tile_subtext"
                            android:text="@string/main_act_dict_tile_subtext"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>
