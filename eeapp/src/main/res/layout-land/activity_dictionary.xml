<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ujujzk.easyengmaterial.eeapp.dictionary.DictionaryActivity">

        <include
                android:id="@+id/dict_act_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/app_bar"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dict_act_app_bar"
                android:orientation="horizontal"
            >

                <fragment
                        class="com.ujujzk.easyengmaterial.eeapp.dictionary.WordListFragment"
                        android:id="@+id/word_list_fragment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        tools:layout="@layout/fragment_word_list"/>

                <fragment
                        class="com.ujujzk.easyengmaterial.eeapp.dictionary.WordArticleFragment"
                        android:id="@+id/word_article_fragment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        tools:layout="@layout/fragment_word_article"/>

        </LinearLayout>

</RelativeLayout>
