<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary_window_bgr_light"
                tools:context="com.ujujzk.easyengmaterial.eeapp.GrammarActivity">

    <include
            android:id="@+id/gramm_act_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_bar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gramm_act_app_bar">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/gramm_act_progress_bar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true" />

        <RelativeLayout
                android:id="@+id/gramm_act_no_connect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <ImageView
                    android:id="@+id/no_connect_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/internet_is_not_available"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/internet_connection_is_not_available"/>

            <Button
                    android:id="@+id/no_connect_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/accent_light"
                    android:textSize="@dimen/no_connect_txt_size"
                    android:text="TRY AGAIN"
                    style="?android:attr/borderlessButtonStyle"
                    />

            <TextView
                    android:id="@+id/no_connect_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/no_connect_btn"
                    android:textSize="@dimen/no_connect_txt_size"
                    android:text="@string/internet_connection_is_not_available"
                    />



        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/gramm_act_rv_topic_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">


        </android.support.v7.widget.RecyclerView>

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/gramm_act_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_play_arrow_white_24dp"
                app:fab_colorNormal="@color/accent_light"
                app:fab_colorPressed="@color/accent_light"
                app:fab_colorRipple="#99FFFFFF"
                app:fab_showShadow="true"
                app:fab_shadowColor="#66000000"
                app:fab_shadowRadius="4dp"
                app:fab_shadowXOffset="1dp"
                app:fab_shadowYOffset="3dp"
                app:fab_showAnimation="@animator/fab_scale_up"
                app:fab_hideAnimation="@animator/fab_scale_down"
                android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>
