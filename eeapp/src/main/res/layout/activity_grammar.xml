<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary_window_bgr_light"
                tools:context="com.ujujzk.easyengmaterial.eeapp.GrammarActivity">

    <ImageView
            android:id="@+id/gramm_act_title_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_img_height"
            android:src="@drawable/img_gramm"
            android:scaleType="centerCrop"
            android:transitionName="grammTitleImage"/>

    <include
            android:id="@+id/gramm_act_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gramm_act_title_img"
            layout="@layout/app_bar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gramm_act_app_bar">

        <ProgressBar
                android:id="@+id/gramm_act_progress_bar"
                style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/gramm_act_rv_topic_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

    <!-- TODO here must be FAB -->

    </RelativeLayout>

</RelativeLayout>
