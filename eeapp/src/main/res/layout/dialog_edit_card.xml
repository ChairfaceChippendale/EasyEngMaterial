<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             >

    <android.support.design.widget.TextInputLayout
            android:id="@+id/dialog_edit_card_til_front_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <EditText
                android:id="@+id/dialog_edit_card_et_front_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_edit_card_front_side"
                android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/dialog_edit_card_til_back_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_edit_card_til_front_side"
            android:layout_toLeftOf="@+id/dialog_edit_card_translate"
            android:layout_marginTop="10dp">

        <EditText
                android:id="@+id/dialog_edit_card_et_back_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_edit_card_back_side"
                android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/dialog_edit_card_translate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_edit_card_til_front_side"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_glosbe_color_24dp"
            style="?android:attr/borderlessButtonStyle"/>


</RelativeLayout>