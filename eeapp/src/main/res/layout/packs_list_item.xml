<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/packs_list_item_elevation"
        app:cardCornerRadius="@dimen/packs_list_item_corner_radius"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

    <TextView
            android:id="@+id/packs_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Title"/>

    <TextView
            android:id="@+id/packs_list_item_cards_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="0 cards"/>

    </LinearLayout>


</android.support.v7.widget.CardView>