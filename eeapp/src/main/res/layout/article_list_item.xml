<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/article_list_item_elevation"
        app:cardCornerRadius="@dimen/article_list_item_corner_radius">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <TextView
                android:id="@+id/article_list_item_dictionary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#303F9F"
                android:text="Dictionary"/>

        <TextView
                android:id="@+id/article_list_item_word_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_list_item_dictionary_name"
                android:textColor="#212121"
                android:textSize="24sp"
                android:text="Word"/>

        <TextView
                android:id="@+id/article_list_item_word_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_list_item_word_name"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textColor="#212121"
                android:text="article"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>