<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary_window_bgr_light"
        tools:context="com.ujujzk.easyengmaterial.eeapp.DictionaryActivity">

        <!--<include-->
                <!--android:id="@+id/dict_act_app_bar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--layout="@layout/app_bar"-->
                <!--/>-->

        <android.support.v7.widget.Toolbar
                android:id="@+id/dict_act_app_bar"
                android:orientation="vertical"
                android:background="@color/toolbar_bgr_light"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:transitionName="toolBar"
                app:theme="?attr/mToolBarTheme"
                app:popupTheme="?attr/mPopupTheme"/>


        <android.support.design.widget.TabLayout
                android:id="@+id/dict_act_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dict_act_app_bar"
                app:tabMode="fixed"
                android:background="@color/toolbar_bgr_light"
                app:tabTextColor="@color/toolbar_text_light"
                app:tabSelectedTextColor="@color/toolbar_text_light"
                app:tabGravity="fill"/>


    <android.support.v4.view.ViewPager
            android:id="@+id/dict_act_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dict_act_app_bar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</RelativeLayout>
