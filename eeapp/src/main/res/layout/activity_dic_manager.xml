<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ujujzk.easyengmaterial.eeapp.dictionary.DictManagerActivity">

    <include
            android:id="@+id/dic_manager_act_app_bar"
            layout="@layout/app_bar"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/dic_manager_act_rv_dic_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dic_manager_act_app_bar"
            android:visibility="visible">


    </android.support.v7.widget.RecyclerView>


    <com.github.clans.fab.FloatingActionButton
            android:id="@+id/dic_manager_act_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_refresh_white_24dp"
            app:fab_colorNormal="@color/accent_light"
            app:fab_colorPressed="@color/accent_light"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_showAnimation="@animator/fab_show_from_bottom"
            app:fab_hideAnimation="@animator/fab_hide_to_bottom"
            android:visibility="visible"/>


</RelativeLayout>
