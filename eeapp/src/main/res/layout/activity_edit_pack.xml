<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ujujzk.easyengmaterial.eeapp.vocabulary.EditPackActivity">

    <include
            android:id="@+id/edit_pack_act_app_bar"
            layout="@layout/app_bar"/>

    <TextView
            android:id="@+id/edit_pack_act_pack_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_pack_act_app_bar"
            android:gravity="center"
            android:layout_margin="@dimen/edit_pack_act_pack_title_margin"
            android:clickable="true"
            android:textSize="@dimen/edit_pack_act_pack_title_text_size"
            android:textColor="@color/edit_pack_act_title_light"
            tools:text="Title"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/edit_pack_act_card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edit_pack_act_pack_title"
            android:layout_marginLeft="@dimen/edit_pack_act_card_list_margin"
            android:layout_marginRight="@dimen/edit_pack_act_card_list_margin">
    </android.support.v7.widget.RecyclerView>

    <com.github.clans.fab.FloatingActionButton
            android:id="@+id/edit_pack_act_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_add_24px"
            app:fab_colorNormal="@color/accent_light"
            app:fab_colorPressed="@color/accent_light"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_showAnimation="@animator/fab_scale_up"
            app:fab_hideAnimation="@animator/fab_scale_down"/>

</RelativeLayout>
