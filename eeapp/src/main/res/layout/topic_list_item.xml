<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/topic_list_item_elevation"
        app:cardCornerRadius="@dimen/topic_list_item_corner_radius">

    <View
            android:id="@+id/topic_list_item_selected_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gramm_list_item_selected_overlay_light"
            android:visibility="invisible" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <TextView
                android:id="@+id/topic_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/gramm_list_item_title_light"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Title"/>


    </LinearLayout>





</android.support.v7.widget.CardView>